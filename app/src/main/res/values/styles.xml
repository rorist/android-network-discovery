<resources>
    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">5dip</item>
    </style>
    <style name="ButtonTop" parent="@style/Button">
<!--        <item name="android:background">@drawable/btn_top</item>-->
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ButtonBottom" parent="@style/Button">
        <item name="android:layout_width">60dip</item>
    </style>
    <style name="ButtonConnect" parent="@style/Button">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">85dip</item>
        <item name="android:layout_height">38dip</item>
    </style>
    <style name="help_title">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="help_content">
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ListText">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ListTextTitle" parent="ListText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ListTextSummary" parent="ListText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
